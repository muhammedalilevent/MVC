@model _6_Filter_Bundle.Models.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kullanıcı Girişi Yapınız</h2>

<div class="row col-xs-6" style="top:50%;left:25%;">
    <div class="panel panel-default">
        <div class="panel-body">
            @using (Html.BeginForm("UserLogin","Login",FormMethod.Post))
            {
                <div class="col-lg-12">
                    <div class="form-group">
                        @Html.LabelFor(l => l.UserName)
                        <div class="form-group">
                            @Html.TextBoxFor(l => l.UserName, new { @class = "form-control", @style = "min-width:100%" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(l => l.Password)
                        <div class="form-group">
                            @Html.TextBoxFor(l => l.Password, new { @class = "form-control", @style = "min-width:100%" })
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block">Giriş Yap</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
